{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["dom", "es5", "scripthost", "es2015"],
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "baseUrl": "./src",
        "paths": {
            "@app/*": ["./*"],
            "@controllers/*": ["controllers/*"],
            "@resources/*": ["resources/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@models/*": ["models/*"],
            "@validations/*": ["validations/*"],
            "@middlewares/*": ["middlewares/*"]
        }
    },
    "lib": ["es2015"],
    "exclude": [
        "node_modules",
        "tests"
    ]
}
